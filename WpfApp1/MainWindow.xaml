<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Left="0"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        Topmost="True"
        mc:Ignorable="d"
        Padding="0,0,0,0"
        Title="MainWindow" Height="2" Width="800"
        WindowStyle="None"
        
        
        
        AllowsTransparency="True"
        ResizeMode="NoResize">
  

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*" Name="CLeft"/>
            <ColumnDefinition Width="67*" Name="CRight"/>
        </Grid.ColumnDefinitions>
        <Line Stretch="Fill" Stroke="Green" StrokeThickness="2" X1="0" X2="1" HorizontalAlignment="Right" Margin="-1,0,-1,0"/>
    </Grid>


</Window>
